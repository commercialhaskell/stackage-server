/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
   Global styles
   */

html {
  position:relative;
  min-height:100%;
}

body {
  background: #f0f0f0;
  font-family: 'Lato', sans-serif;
  font-size: 16px;
  margin-bottom: 4em;
  padding-bottom: 2em;
}

code,pre {
  color: #555;
  font-family: "ubuntu mono", monospace;
}

.brand > img {
  height: 20px;
}

.navbar-inverse {
  margin-bottom: 1em;
}
.navbar-inverse .navbar-inner {
  background: #0981c3;
}
.navbar-inverse .navbar-inner .btn-navbar {
  background: #0981c3;
}
.navbar-inverse .navbar-inner * {
  color: #fff !important
}
.navbar-inverse .nav .active>a, .navbar-inverse .nav .active>a:hover, .navbar-inverse .nav .active>a:focus {
  background: #0981c3 !important;
}

.navbar-inner { border-color: #06537d !important; }

footer {
  background: #0981c3;
  border-top: 1px solid #ddd;
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  p {
    margin: 1em 0;
    padding: 0 1em;
  }
  a {
    color: #fff;
    font-weight: bold;
  }
}

/* Alerts */

.alert {
  margin-top: 1em;
}

h1,h2,h3,h4,h5 {
  color: #06537d
}

.content {
  line-height: 30px;
}
